<!DOCTYPE html>
<html>
  <head>
    <title><%= @meta_title.nil? ? "" : "#{@meta_title} - " %>ASKAROVICH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="container">
        <h1 class="logo"><a href="/">Askarovich</a></h1>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
